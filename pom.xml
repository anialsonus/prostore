<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.arenadata.dtm</groupId>
    <artifactId>parent</artifactId>
    <version>3.3.0</version>
    <packaging>pom</packaging>
    <name>DTM Parent</name>

    <modules>
        <module>dtm-common</module>
        <module>dtm-jdbc-driver</module>
        <module>dtm-kafka-core</module>
        <module>dtm-calcite-core</module>
        <module>dtm-query-execution-plugin-api</module>
        <module>plugins</module>
        <module>dtm-query-execution-core</module>
        <module>dtm-status-monitor</module>
    </modules>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <maven.build.plugin>3.8.1</maven.build.plugin>
        <maven.jar.plugin>3.2.0</maven.jar.plugin>
        <maven.failsafe.plugin>3.0.0-M4</maven.failsafe.plugin>
        <maven.surefire.plugin>3.0.0-M4</maven.surefire.plugin>
        <maven.release.plugin>3.0.0-M1</maven.release.plugin>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.assembly.plugin>3.3.0</maven.assembly.plugin>
        <maven.jar.plugin>3.2.0</maven.jar.plugin>
        <apache.avro.version>1.9.2</apache.avro.version>
        <apache.kafka.version>2.4.0</apache.kafka.version>
        <apache.httpclient.version>4.5.6</apache.httpclient.version>
        <apache.commons.lang.version>3.10</apache.commons.lang.version>
        <logback.version>1.2.3</logback.version>
        <junit.version>5.4.1</junit.version>
        <hamcrest.version>2.2</hamcrest.version>
        <java.version>1.8</java.version>
        <vertx.version>3.8.5</vertx.version>
        <calcite.version>1.22.0</calcite.version>
        <hsqldb.version>2.5.1</hsqldb.version>
        <junit-jupiter-engine.version>5.4.0</junit-jupiter-engine.version>
        <guava.version>28.2-jre</guava.version>
        <spring.plugin.core.version>2.0.0.RELEASE</spring.plugin.core.version>
        <tarantool.connector.version>1.9.4</tarantool.connector.version>
        <commons.pool2.version>2.7.0</commons.pool2.version>
        <pg.client.version>0.11.4</pg.client.version>
        <liquibase.version>3.8.9</liquibase.version>
        <lombok.version>1.18.12</lombok.version>
        <clickhouse.jdbc.version>0.2.4</clickhouse.jdbc.version>
        <skipITs>true</skipITs>
        <jackson.version>2.10.2</jackson.version>
    </properties>

    <scm>
        <connection>scm:git:git@github.com:arenadata/dtm.git</connection>
        <url>https://github.com/arenadata/dtm</url>
        <developerConnection>scm:git:git@github.com:arenadata/dtm.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <profiles>
        <profile>
            <id>local</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
        <profile>
            <id>master</id>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>com.mycila</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <version>4.0.rc2</version>
                <configuration>
                    <licenseSets>
                        <licenseSet>
                            <header>license-header.txt</header>
                            <excludes>
                                <exclude>**/README</exclude>
                                <exclude>src/test/resources/**</exclude>
                                <exclude>src/main/resources/**</exclude>
                            </excludes>
                        </licenseSet>
                    </licenseSets>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>data-mart-releases</id>
            <name>Arenadata Artifactory-releases</name>
            <url>https://rt.adsw.io/artifactory/data-mart-release</url>
        </repository>
        <snapshotRepository>
            <id>data-mart-snapshots</id>
            <name>Arenadata Artifactory-snapshots</name>
            <url>https://rt.adsw.io/artifactory/data-mart-snapshot</url>
        </snapshotRepository>
    </distributionManagement>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>2.2.4.RELEASE</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
